{
  "name":"Desk.com",
  "apis":{
    "case": {
      "list":{
        "url":"https://{subdomain}.desk.com/api/v2/cases",
        "method":"get"
      },
      "search":{
        "url":"https://{subdomain}.desk.com/api/v2/cases/search",
        "method":"get"
      },
      "show":{
        "url":"https://{subdomain}.desk.com/api/v2/cases/{id}",
        "method":"get"
      },
      "create":{
        "method":"post",
        "url":"https://{subdomain}.desk.com/api/v2/customers/{customer_id}/cases"
      },
      "update":{
        "url":"https://{subdomain}.desk.com/api/v2/cases/{id}",
        "method":"patch",
        "data":["custom_fields"]
      },
      "create_reply":{
        "method":"post",
        "url":"https://{subdomain}.desk.com/api/v2/cases/{id}/replies",
        "data":["body","direction"]
      }
    },
    "integration_urls":{
      "list":{
        "url":"https://{subdomain}.desk.com/api/v2/integration_urls",
        "method":"get"
      },
      "show":{
        "url":"https://{subdomain}.desk.com/api/v2/integration_urls/{id}",
        "method":"get"
      },
      "create":{
        "url":"https://{subdomain}.desk.com/api/v2/integration_urls",
        "method":"post",
        "data":["name","description","enabled","markup"]
      },
      "update":{
        "url":"https://{subdomain}.desk.com/api/v2/integration_urls/{id}",
        "method":"patch"
      },
      "delete":{
        "url":"https://{subdomain}.desk.com/api/v2/integration_urls/{id}",
        "method":"delete"
      }
    }
  }
}
